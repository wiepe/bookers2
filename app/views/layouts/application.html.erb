<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand" href="/">Bookers</a>
            <div class="collapse navbar-collapse">

              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to user_path(current_user), class:"nav-link text-light" do %>
                      <i class="fas fa-home" aria-hidden="true"></i> Home
                    <% end %>
                  </li>

                  <li>
                    <%= link_to users_path, class:"nav-link text-light" do %>
                      <i class="fas fa-users" aria-hidden="true"></i> Users
                    <% end %>
                  </li>

                  <li>
                    <%= link_to books_path, class:"nav-link text-light" do %>
                      <i class="fas fa-book-open" aria-hidden="true"></i> Books
                    <% end %>
                  </li>

                  <li>
                    <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
                      <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Log out
                    <% end %>
                  </li>

                <% else %>

                  <li>
                    <%= link_to root_path, class:"nav-link text-light" do %>
                      <i class="fas fa-home" aria-hidden="true"></i> Home
                    <% end %>
                  </li>

                  <li>
                    <%= link_to home_about_path, class:"nav-link text-light" do %>
                      <i class="fas fa-link" aria-hidden="true"></i> About
                    <% end %>
                  </li>

                  <li>
                    <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                      <i class="fas fa-user-plus" aria-hidden="true"></i> Sign up
                    <% end %>
                  </li>

                  <li>
                    <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                      <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Log in
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
      </nav>
    </header>

    <main>
      <p><%= flash[:notice] %></p>
      <div class="container  px-5 px-sm-0">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p> CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
