<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
    <div class="form-group">
        <%= f.label :Title %></br>
        <%= f.text_field :title %>
    </div>

    <div class="form-group">
        <%= f.label :Opinion %></br>
        <%= f.text_area :body %>
    </div>

    <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>

    </div>
<% end %>